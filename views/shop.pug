extends layouts/main-layout.pug

block styles 
        link(rel="stylesheet", href="/css/product.css")

block content 
     main 
        main 
            if prods.length > 0
                .grid
                    each product in prods
                        article.card.product-item
                            header.product__title
                                h1.product__title #{product.title}
                    .card__image
                        img.src(src="https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png" alt="A Book")
                    .card__content
                        .product__price $19.99
                        .product__description A very interesting book about so many even more interesting things!
                    .card__actions
                        .btn Add to Cart
            else    
                h1 There is no products at the moment!